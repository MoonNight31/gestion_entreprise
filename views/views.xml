<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- ========== SALARIÉS (Vue spécifique) ========== -->
    <record id="view_salarie_tree" model="ir.ui.view">
        <field name="name">salarie.tree</field>
        <field name="model">school.personne</field>
        <field name="arch" type="xml">
            <tree string="Salariés">
                <field name="nom"/>
                <field name="prenom"/>
                <field name="email"/>
                <field name="telephone"/>
                <field name="entreprise_id"/>
                <field name="poste"/>
            </tree>
        </field>
    </record>

    <record id="view_salarie_form" model="ir.ui.view">
        <field name="name">salarie.form</field>
        <field name="model">school.personne</field>
        <field name="arch" type="xml">
            <form string="Salarié">
                <sheet>
                    <group>
                        <group string="Informations personnelles">
                            <field name="nom" required="1"/>
                            <field name="prenom" required="1"/>
                            <field name="email"/>
                            <field name="telephone"/>
                        </group>
                        <group string="Informations professionnelles">
                            <field name="entreprise_id" required="1"/>
                            <field name="poste"/>
                            <field name="type_profil" invisible="1"/>
                        </group>
                    </group>
                    <group string="Adresse">
                        <field name="adresse" placeholder="Adresse complète..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_salarie" model="ir.actions.act_window">
        <field name="name">Salariés</field>
        <field name="res_model">school.personne</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type_profil', '=', 'salarie')]</field>
        <field name="context">{'default_type_profil': 'salarie'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_salarie_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_salarie_form')})]"/>
    </record>

    <!-- Extension de la vue générique Personne pour ajouter le champ entreprise_id -->
    <record id="view_personne_tree_entreprise" model="ir.ui.view">
        <field name="name">school.personne.tree.entreprise</field>
        <field name="model">school.personne</field>
        <field name="inherit_id" ref="gestion_ecole.view_personne_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='formation_id']" position="after">
                <field name="entreprise_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="view_personne_form_entreprise" model="ir.ui.view">
        <field name="name">school.personne.form.entreprise</field>
        <field name="model">school.personne</field>
        <field name="inherit_id" ref="gestion_ecole.view_personne_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='formation_id']" position="after">
                <field name="entreprise_id" invisible="type_profil != 'salarie'"/>
            </xpath>
        </field>
    </record>

    <!-- ========== GROUPE D'ENTREPRISES ========== -->
    <record id="view_groupe_tree" model="ir.ui.view">
        <field name="name">entreprise.groupe.tree</field>
        <field name="model">entreprise.groupe</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" string="ID" width="50px"/>
                <field name="nom"/>
                <field name="siren"/>
                <field name="siege_social"/>
                <field name="entreprise_count"/>
            </tree>
        </field>
    </record>

    <record id="view_groupe_form" model="ir.ui.view">
        <field name="name">entreprise.groupe.form</field>
        <field name="model">entreprise.groupe</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="nom"/>
                            <field name="siren"/>
                        </group>
                        <group>
                            <field name="siege_social"/>
                            <field name="entreprise_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Entreprises du groupe">
                            <field name="entreprise_ids">
                                <tree>
                                    <field name="nom"/>
                                    <field name="siret"/>
                                    <field name="adresse"/>
                                    <field name="salarie_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_groupe" model="ir.actions.act_window">
        <field name="name">Groupes d'Entreprises</field>
        <field name="res_model">entreprise.groupe</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ========== ENTREPRISE ========== -->
    <record id="view_entreprise_tree" model="ir.ui.view">
        <field name="name">entreprise.entreprise.tree</field>
        <field name="model">entreprise.entreprise</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom"/>
                <field name="siret"/>
                <field name="groupe_id"/>
                <field name="salarie_count"/>
                <field name="telephone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="view_entreprise_form" model="ir.ui.view">
        <field name="name">entreprise.entreprise.form</field>
        <field name="model">entreprise.entreprise</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="nom"/>
                            <field name="siret"/>
                            <field name="groupe_id"/>
                        </group>
                        <group>
                            <field name="telephone"/>
                            <field name="email"/>
                            <field name="salarie_count"/>
                        </group>
                    </group>
                    <group>
                        <field name="adresse" placeholder="Adresse complète..."/>
                    </group>
                    <notebook>
                        <page string="Salariés">
                            <field name="personne_ids">
                                <tree>
                                    <field name="nom"/>
                                    <field name="prenom"/>
                                    <field name="email"/>
                                    <field name="telephone"/>
                                    <field name="poste"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_entreprise" model="ir.actions.act_window">
        <field name="name">Entreprises</field>
        <field name="res_model">entreprise.entreprise</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ========== MENU ========== -->
    <menuitem id="menu_entreprise_root" 
              name="Gestion Entreprise" 
              sequence="20" 
              web_icon="base,static/description/icon.png"/>

    <menuitem id="menu_groupe" 
              name="Groupes d'Entreprises" 
              parent="menu_entreprise_root" 
              action="action_groupe" 
              sequence="1"/>

    <menuitem id="menu_entreprise" 
              name="Entreprises" 
              parent="menu_entreprise_root" 
              action="action_entreprise" 
              sequence="2"/>

    <menuitem id="menu_salarie" 
              name="Salariés" 
              parent="menu_entreprise_root" 
              action="action_salarie" 
              sequence="3"/>

  </data>
</odoo>
